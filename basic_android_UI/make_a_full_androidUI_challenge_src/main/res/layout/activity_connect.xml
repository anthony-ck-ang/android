<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/backgroundImage"
        android:src="@drawable/background"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@id/bottomArea"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/trainName"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:text="SuperTrain A136"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="7dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/currentlyLabel"
            android:text="Currently:"
            android:textSize="20sp"
            android:padding="5dp"
            android:textColor="#AAAAAA"
            android:background="#FFFFFF"
            android:layout_above="@id/trainName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bookButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D2486F"
            android:text="Book"
            android:textColor="#FFFFFF"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detailHeader"
            android:layout_alignParentTop="true"
            android:background="#6F839A"
            android:text="12:36 Leaving Austin to Los Angeles"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/bottomArea"
        android:background="#86C664"
        android:orientation="vertical"
        android:weightSum="32"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="32">
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/upArrow"
                android:src="@drawable/arrowup"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/upText"
                android:layout_weight="7"
                android:text="NorthBound\n50 min"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/downArrow"
                android:src="@drawable/arrowdown"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/downText"
                android:layout_weight="7"
                android:text="SouthBound\n20 min"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="32">
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/gpsImage"
                android:src="@drawable/gps"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/gpsText"
                android:layout_weight="7"
                android:text="You are: \n10 mins away"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/newsImage"
                android:src="@drawable/news"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/downText"
                android:layout_weight="7"
                android:text="WARNING: \nMorning Delay"
                android:textColor="#c94c4c"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />

    </LinearLayout>
</RelativeLayout>

